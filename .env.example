# API Configuration Example
# Copy this file to .env and fill in your actual API keys

# OpenWeather API (optional - get free key at https://openweathermap.org/api)
# Without this key, the app will use simulated weather data
OPENWEATHER_API_KEY=your_openweather_api_key_here

# News API (optional - get free key at https://www.thenewsapi.com/)
# Without this key, the app will use simulated news data
NEWS_API_KEY=your_news_api_key_here

# Flask Configuration
FLASK_ENV=development
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
